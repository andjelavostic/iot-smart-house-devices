{
  "mode": "SIMULATION",
  "runs_on": "PI3",
  "device_hostname": "RPi_Bedroom_LivingRoom",
  "mqtt": {
    "broker": "localhost",
    "port": 1883,
    "batch_size": 5,
    "publish_interval": 5
  },
  "sensors": {
    "DHT1": {
      "type": "dht",
      "simulated": true,
      "delay": 4,
      "pin": 16,
      "field_name": "temp_hum",
      "topic": "home/dht1",
      "description": "Bedroom Temperature and Humidity"
    },
    "DHT2": {
      "type": "dht",
      "simulated": true,
      "delay": 4,
      "pin": 16,
      "field_name": "temp_hum",
      "topic": "home/dht2",
      "description": "Master Bedroom Temperature and Humidity"
    },
    "IR": {
        "type": "ir",
        "simulated": true,
        "delay": 1,
        "pin": 17,
        "field_name": "button",
        "topic": "home/ir1",
        "description": "Living Room IR Sensor",
        "button_map": {
              "0x300ff02fd": "POWER", 
              "0x300ff629d": "COLOR_UP",
              "0x300ffa857": "COLOR_DOWN",
              "0x300ff22dd": "BRIGHT_DOWN",
              "0x300ffc23d": "BRIGHT_UP"
        }
    },
    "DPIR3": {
      "type": "pir",
      "simulated": true,
      "delay": 3,
      "pin": 6,
      "field_name": "motion",
      "topic": "home/dpir3",
      "description": "Living Room Motion Sensor"
    }
  },
  "actuators": {
    "BRGB": {
        "type": "rgb_led",
        "simulated": true,
        "red_pin": 12,
        "green_pin": 13,
        "blue_pin": 19,
        "color": [0,0,0],
        "field_name": "color",
        "topic": "home/rgb",
        "description": "Bedroom RGB LED"
    },
    "LCD": {
      "type": "lcd",
      "simulated": true,
      "delay": 2,
      "pin_rs": 0,
      "pin_e": 2,
      "pins_db": [4,5,6,7],
      "cols": 16,
      "lines": 2,
      "backlight": true,
      "message": "Welcome!",
      "field_name": "lcd_message",
      "topic": "home/lcd",
      "description": "Living Room LCD Display"
    }
  }
}